---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqBooking = faqData.filter((faq) => faq.category === 'booking')
const faqFacilities = faqData.filter((faq) => faq.category === 'facilities')
const faqTravel = faqData.filter((faq) => faq.category === 'travel')

// - SEO
const SEO = {
	title: 'คำถามที่พบบ่อย | เตรียมตัวเที่ยว อ่างขาง และจองที่พัก',
	description:
		'รวมคำถามยอดฮิตเกี่ยวกับการเข้าพักที่ ยูนนานโฮมสเตย์, วิธีเดินทางไปดอยอ่างขาง, การจองห้องพัก, และกิจกรรมท่องเที่ยวที่คุณไม่ควรพลาด อ่านก่อนเที่ยว!'
}
// - Page Header
const header = {
  title: 'คำถามที่พบบ่อยเกี่ยวกับ <br><strong>ยูนนานโฮมสเตย์ ดอยอ่างขาง</strong>',
  text: 'รวมคำถามยอดนิยมเพื่อช่วยให้คุณวางแผนการพักผ่อนได้สะดวกยิ่งขึ้น'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="การจองและข้อมูลราคา"
		text="รวมคำถามยอดนิยมเกี่ยวกับการจองห้องพักยูนนานโฮมสเตย์ เพื่อให้คุณวางแผนการเข้าพักได้อย่างมั่นใจ"
		data={faqBooking}
	/>

	<FAQ
		title="บริการและสิ่งอำนวยความสะดวก"
		text="ค้นหาข้อมูลเกี่ยวกับสิ่งอำนวยความสะดวกในห้องพัก ที่เราพร้อมมอบให้เพื่อความสบายของคุณ"
		data={faqFacilities}
	/>

	<FAQ
		title="การเดินทางและสถานที่ท่องเที่ยว"
		text="แนะนำเส้นทางและการท่องเที่ยวอ่างขาง เพื่อให้ทริปของคุณสมบูรณ์แบบที่สุด"
		data={faqTravel}
	/>
	<CTA />
</Layout>
