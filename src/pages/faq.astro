---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqBooking = faqData.filter((faq) => faq.category === 'booking')
const faqFacilities = faqData.filter((faq) => faq.category === 'facilities')
const faqTravel = faqData.filter((faq) => faq.category === 'travel')

// - SEO
const SEO = {
	title: 'Foxi | Get Your Questions Answered with a Smile',
	description:
		'Dive into the Foxi FAQ Funhouse to get answers to all your questions about pricing, integrations, features, and more. Discover how Foxi can make your work life more productive and enjoyable.'
}
// - Page Header
const header = {
  title: 'คำถามที่พบบ่อยเกี่ยวกับ <strong>ยูนนานโฮมสเตย์ ดอยอ่างขาง</strong>',
  text: 'รวมคำถามยอดนิยมเพื่อช่วยให้คุณวางแผนการพักผ่อนได้สะดวกยิ่งขึ้น'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="การจองและข้อมูลราคา"
		text="รวมคำถามยอดนิยมเกี่ยวกับการจองห้องพักยูนนานโฮมสเตย์ เช่น การมัดจำ การยกเลิก และรายละเอียดแพ็กเกจห้องพัก เพื่อให้คุณวางแผนการเข้าพักได้อย่างมั่นใจ"
		data={faqBooking}
	/>

	<FAQ
		title="สิ่งอำนวยความสะดวกและบริการภายในที่พัก"
		text="ค้นหาข้อมูลเกี่ยวกับสิ่งอำนวยความสะดวกในห้องพัก เช่น Wi-Fi ฟรี ห้องน้ำส่วนตัว อาหารเช้า และบริการอื่น ๆ ที่เราพร้อมมอบให้เพื่อความสบายของคุณ"
		data={faqFacilities}
	/>

	<FAQ
		title="การเดินทางและสถานที่ท่องเที่ยวใกล้ยูนนานโฮมสเตย์"
		text="แนะนำเส้นทางการเดินทางขึ้นดอยอ่างขาง ระยะทางจากแหล่งท่องเที่ยวสำคัญ และคำแนะนำช่วงเวลาที่เหมาะสมในการท่องเที่ยว เพื่อให้ทริปของคุณสมบูรณ์แบบที่สุด"
		data={faqTravel}
	/>
	<CTA />
</Layout>
