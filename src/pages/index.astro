---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Blogs from '../components/blocks/blog/BlogCards.astro'
import HighlightBlocks from '../components/blocks/highlights/HightlightRows.astro'
import FeatureHightlightCards from '../components/blocks/highlights/FeatureHightlightCards.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// - SEO
const SEO = {
	title: 'Yunnan Home Stay',
	description:
		'ยูนนานโฮมสเตย์ บริการห้องพักดอยอ่างขาง ห้องพักใกล้ดอยอ่างขาง ท่องเที่ยวดอยอ่างขาง ตั้งอยู่ใจกลางชุมชนจีนยูนนาน บ้านผาแดง ดอยผาแดง อยู่ใกล้แหล่งท่องเที่ยวสำคัญต่างๆของดอยอ่างขาง'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<Blogs />
	<FeatureHightlightCards classes="dark:bg-neutral-950/80" />
	<HighlightBlocks />
	<CTA />
</Layout>
