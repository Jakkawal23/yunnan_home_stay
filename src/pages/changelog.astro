---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import feedData from '../data/json-files/changelogData.json'

// Content
// - SEO
const SEO = {
	title: 'อัปเดตล่าสุด | การพัฒนาบริการ ยูนนานโฮมสเตย์ ดอยอ่างขาง',
	description:
		'ติดตามการปรับปรุงห้องพัก สิ่งอำนวยความสะดวก และบริการใหม่ๆ ของ ยูนนานโฮมสเตย์! ดูประวัติการพัฒนาทั้งหมด เพื่อประสบการณ์ที่ดีที่สุดในการพักผ่อนที่ดอยอ่างขาง'
}
// - Page Header
const header = {
	title: 'ประวัติการอัปเดตและ <strong>การพัฒนาบริการ</strong>',
	text: 'เรามุ่งมั่นพัฒนาเพื่อให้คุณได้รับประสบการณ์การเข้าพักที่ดีที่สุดเสมอ'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={feedData} />
	<CTA />
</Layout>
