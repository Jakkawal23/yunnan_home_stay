---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import Price from '../components/blocks/pricing/PricingColumns.astro'
import FAQ from '../components/blocks/FAQ/Basic.astro'
import Feature from '../components/blocks/features/FeatureList.astro'

// Content
// - SEO
const SEO = {
	title: 'ห้องพักดอยอ่างขาง ราคาเริ่มต้น ฿xxx | ห้องพัก ยูนนานโฮมสเตย์',
	description:
		'จองห้องพักดอยอ่างขางราคาถูก! ดูราคาทุกแบบที่ ยูนนานโฮมสเตย์ ทั้งห้องเดี่ยว ห้องคู่ และห้องครอบครัว ใกล้ชุมชนจีนยูนนาน บ้านผาแดง พร้อมสิ่งอำนวยความสะดวกครบครัน'
}
// - Page Header
const header = {
	title: 'เลือกบริการห้องพัก <br><strong>ยูนนานโฮมสเตย์</strong>',
	text: 'สำรองห้องพักดอยอ่างขาง พร้อมสิ่งอำนวยความสะดวกครบครันเพื่อการพักผ่อนที่สะดวกสบาย'
}

---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Price />
	<Feature />
	<FAQ classes="bg-slate-50 dark:bg-neutral-900/40" />
</Layout>
