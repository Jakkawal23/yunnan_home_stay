---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Content
// - SEO
const SEO = {
	title: 'ติดต่อจองห้องพัก ยูนนานโฮมสเตย์ | ดอยอ่างขาง',
	description:
		'จองห้องพักดอยอ่างขางง่ายๆ! ติดต่อ ยูนนานโฮมสเตย์ ได้ทันทีผ่าน Line, โทรศัพท์ หรือ Facebook เราพร้อมตอบคำถามและช่วยเหลือในการจองที่พักของคุณ'
}

// - Page Header
const header = {
  title: 'ติดต่อ จองห้องพัก <br><strong>ยูนนานโฮมสเตย์ ดอยอ่างขาง</strong>',
