---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresComfort = featuresData.filter((feature) => feature.category === 'Comfort')
const featuresFood = featuresData.filter((feature) => feature.category === 'Food')
const featuresSecurity = featuresData.filter((feature) => feature.category === 'Security')
const featuresExperience = featuresData.filter((feature) => feature.category === 'Experience')

// Content
// - SEO
const SEO = {
	title: 'Foxi | Features to Boost Productivity & Security',
	description:
		"Explore Foxi's powerful features designed to enhance productivity, ensure top-notch security, and integrate seamlessly with your favorite tools. Join thousands of satisfied users and transform your workflow with Foxi today!"
}
// - Page Header
const header = {
	title: 'บริการสิ่งอำนวยความสะดวก <br><strong>ยูนนานโฮมสเตย์</strong>',
	text: 'ค้นพบความสะดวกสบายในสไตล์ชุมชนจีนยูนนาน พร้อมบริการสำหรับการพักผ่อนบนดอยอ่างขาง'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />

	<Feature
		title="ความสะดวกสบายในห้องพัก"
		text="พักผ่อนอย่างเต็มที่ด้วยสิ่งอำนวยความสะดวกครบครันในทุกห้องพัก"
		data={featuresComfort}
	/>

	<Feature
		title="อาหารและเครื่องดื่ม"
		text="อิ่มอร่อยกับเมนูพื้นบ้านและกาแฟหอมกรุ่นในยามเช้า"
		data={featuresFood}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>

	<Feature
		title="ความปลอดภัยและความมั่นใจ"
		text="พักผ่อนอย่างอุ่นใจ ด้วยระบบรักษาความปลอดภัยและพื้นที่จอดรถส่วนตัว"
		data={featuresSecurity}
	/>

	<Feature
		title="ประสบการณ์ยูนนานแท้"
		text="สัมผัสวิถีชีวิตชาวยูนนาน และชมวิวธรรมชาติที่งดงามรอบดอยอ่างขาง"
		data={featuresExperience}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>

	<CTA />
</Layout>
