---
// Basic Cards grid Section
// ------------
// Description: A grid of cards with basic contact information in a 4 column layout.
// Properties:
// - classes: Additional classes to be added to the Section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/BasicCard.astro'

// 	Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="requests" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-balance">
				ติดต่อสอบถาม <strong>จองห้องพัก</strong>
			</h2>
			<p class="pb-0 text-lg">
				ติดต่อสอบถามจองห้องพักกับยูนนานโฮมสเตย์ได้หลายช่องทาง
			</p>
		</Col>
	</Row>
	<Row>
		<Col span="3">
			<Card
				title="โทรจองโดยตรง"
				subtitle="ติดต่อสอบถามหรือจองห้องพักได้ทันที โทร 062-426-6052 หรือ 091-070-0484"
				icon="phone"
				iconColor="!text-blue-600"
				classes="text-center dark:!bg-neutral-800/50"
				link="tel:0624266052"
			/>
		</Col>
		<Col span="3">
			<Card
				title="จองผ่าน LINE"
				subtitle="แชทสอบถามรายละเอียดห้องพัก ผ่าน LINE เพิ่มเพื่อนได้ที่ @885liwmd"
				icon="line"
				iconColor="!text-green-500"
				classes="text-center dark:!bg-neutral-800/50"
				link="https://lin.ee/bAUDJhZ"
				target="_blank"
			/>
		</Col>
		<Col span="3">
			<Card
				title="จองผ่าน Facebook"
				subtitle="ติดตามข่าวสาร สอบถามการจองผ่านเพจ Facebook ยูนนานโฮมสเตย์ ดอยอ่างขาง"
				icon="facebook"
				iconColor="!text-blue-800"
				classes="text-center dark:!bg-neutral-800/50"
				link="https://www.facebook.com/profile.php?id=100049282224823"
				target="_blank"
			/>
		</Col>
		<Col span="3" classes="flex flex-col gap-6">
			<Card
				title="เข้ามาจองที่โฮมสเตย์โดยตรง"
				subtitle="สามารถเดินทางมาเยี่ยมชม สอบถาม และจองห้องพัก ได้เลยที่ยูนนานโฮมสเตย์"
				icon="location-check"
				iconColor="!text-red-600"
				classes="text-center dark:!bg-neutral-800/50"
				link="https://maps.app.goo.gl/5LNCU2royyDDMfvg9"
				target="_blank"
			/>
		</Col>
	</Row>
</Section>
