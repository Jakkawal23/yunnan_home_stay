---
// Contact & Booking Channels Modal (Phone, LINE, Facebook)
// ------------
// Description: A modal with the 3 essential Thai contact channels.

// Components
// - UI
import Modal from '../../ui/Modal.astro'
import Button from '../../ui/Button.astro'
import { Icon } from 'astro-icon/components'

// Props
type Props = {
    classes?: string
}
const { classes } = Astro.props

const lineOAId = '@885liwmd'; 
const phone1 = '0624266052';
const phone2 = '0910700484';
const facebookLink = 'https://www.facebook.com/profile.php?id=100049282224823'; 
const chatLink = `https://lin.ee/bAUDJhZ`; 
---

<Modal id="multi-contact" classes={classes} title="ช่องทางติดต่อโฮมสเตย์">
    <p class="mb-4 text-lg font-medium text-center">
        เลือกช่องทางที่คุณสะดวก
    </p>

    <a href={`tel:${phone1}`} target="_self">
        <Button style="secondary" classes="w-full mb-3 bg-white !text-blue-600 border border-blue-600 hover:!bg-blue-50" size="lg">
            <Icon name="phone" class="h-6 w-6 mr-2" />
            โทร: {phone1} (หลัก)
        </Button>
    </a>

    <a href={`tel:${phone2}`} target="_self">
        <Button style="secondary" classes="w-full mb-3 bg-white !text-blue-600 border border-blue-600 hover:!bg-blue-50" size="lg">
            <Icon name="phone" class="h-6 w-6 mr-2" />
            โทร: {phone2} (รอง)
        </Button>
    </a>
    
    <div class="my-2 text-center text-neutral-500 font-semibold">
        ช่องแชท
    </div>

    <a href={chatLink} target="_blank" rel="noopener noreferrer">
        <Button style="secondary" classes="w-full mb-3 bg-white !text-green-500 border border-green-500 hover:!bg-green-50" size="lg">
            <Icon name="line" class="h-6 w-6 mr-2" />
            จองผ่าน LINE (แนะนำ)
        </Button>
    </a>

    <a href={facebookLink} target="_blank" rel="noopener noreferrer">
        <Button style="secondary" classes="w-full mb-3 bg-white !text-blue-800 border border-blue-800 hover:!bg-blue-100" size="lg">
            <Icon name="facebook" class="h-6 w-6 mr-2" />
            จองผ่าน Facebook
        </Button>
    </a>

    
    <p class="mt-4 text-sm text-center text-neutral-500">
        ยูนนานโฮมสเตย์ ยินดีให้บริการ
    </p>
</Modal>