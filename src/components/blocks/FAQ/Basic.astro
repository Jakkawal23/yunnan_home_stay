---
// Basic FAQ section
// ------------
// Description: A section that contains a list of frequently asked questions with answers.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Accordion from '../../ui/Accordion.astro'
import Card from '../../ui/cards/partials/Card.astro'

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="FAQ" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">
				คำถามที่พบบ่อยเกี่ยวกับ <strong>โฮมสเตย์</strong>
			</h2>
			<p class="text-lg leading-relaxed">
				รวมคำถามยอดนิยมเกี่ยวกับการจองห้องพัก สิ่งอำนวยความสะดวก และการเข้าพัก เพื่อให้คุณสะดวกในการวางแผน
			</p>
		</Col>
		<Col span="2" />
		<Col span="8">
			<Card classes="divide-y divide-neutral-100 dark:divide-neutral-800">
				<Accordion
					title="ต้องชำระค่ามัดจำหรือไม่?"
					text="จำเป็นต้องชำระค่ามัดจำไม่เกิน 50% ของค่าห้องพัก ขึ้นอยู่กับช่วงเวลาในการจอง"
				/>
				<Accordion
					title="มีค่าใช้จ่ายเพิ่มเติมไหม?"
					text="ค่าห้องพักรวมทุกอย่างแล้ว ไม่มีค่าใช้จ่ายแอบแฝง"
				/>
				<Accordion
					title="มีบริการอาหารเย็นหรือหมูกระทะไหม?"
					text="สามารถสั่งอาหารตามสั่ง จิ้มจุ่ม และหมูกระทะจากร้านในชุมชนได้"
				/>
				<Accordion
					title="ใกล้แหล่งท่องเที่ยวสำคัญหรือไม่?"
					text="โฮมสเตย์อยู่ใกล้สถานีเกษตรหลวงอ่างขาง (ประมาณ 20 กม.) และจุดชมวิวซุยถัง (ประมาณ 10 กม.)"
				/>
				<Accordion
					title="โฮมสเตย์ตั้งอยู่ที่ไหน?"
					text="ตั้งอยู่ใจกลางหมู่บ้านผาแดง เส้นทางดอยอ่างขาง สะดวกต่อการเดินทางไปแหล่งท่องเที่ยวต่าง ๆ"
				/>
			</Card>
		</Col>
		<Col span="2" />
	</Row>
</Section>

<style>
	.page-header {
		@apply mx-auto max-w-3xl;
	}
	.page-header__text {
		@apply text-lg leading-relaxed;
	}
</style>
