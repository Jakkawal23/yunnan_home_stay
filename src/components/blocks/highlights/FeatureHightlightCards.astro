---
// Basic Cards grid Section
// ------------
// Description: A grid of cards with basic contact information in a 4 column layout.
// Properties:
// - classes: Additional classes to be added to the Section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/BasicCard.astro'

// 	Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="requests" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-balance">
				เที่ยวดอยอ่างขาง พักที่ <strong>ยูนนานโฮมสเตย์</strong>
			</h2>
			<p class="pb-0 text-lg">
				<strong>ยูนนานโฮมสเตย์</strong> ที่พักอ่างขางในหมู่บ้านผาแดง บรรยากาศอบอุ่นเป็นกันเอง
				<br> บริการโดยคนในชุมชนยูนนาน สัมผัสวิถีชีวิตชาวบ้าน เรียนรู้วัฒนธรรมจีนยูนนาน และดื่มด่ำธรรมชาติบนเส้นทาง
				<br> <strong>ไชยปราการ - อ่างขาง / อรุโณทัย - อ่างขาง</strong> เพื่อประสบการณ์ท่องเที่ยวชุมชนอย่างแท้จริง
			</p>
		</Col>
	</Row>
	<Row>
		<Col span="3">
			<Card
				title="สะดวก"
				subtitle="โฮมสเตย์ตั้งอยู่บนเส้นทางไปดอยอ่างขาง ใกล้ร้านสะดวกซื้อและแหล่งท่องเที่ยวสำคัญ เดินทางสะดวก เหมาะสำหรับนักท่องเที่ยวทุกวัย"
				icon="rocket"
				classes="text-center dark:!bg-neutral-800/50"
				link="/"
			/>
		</Col>
		<Col span="3">
			<Card
				title="สะอาด"
				subtitle="ห้องพักสะอาดได้มาตรฐาน มีการทำความสะอาดและเปลี่ยนผ้าปูที่นอน ผ้าห่ม และผ้าเช็ดตัวใหม่ทุกวัน พร้อมห้องน้ำในตัวทุกห้อง"
				icon="document-text"
				classes="text-center dark:!bg-neutral-800/50"
				link="/"
			/>
		</Col>
		<Col span="3">
			<Card
				title="ปลอดภัย"
				subtitle="โฮมสเตย์ตั้งอยู่ใจกลางชุมชน ใกล้ถนนใหญ่ มีระบบกล้องวงจรปิดดูแลตลอด 24 ชั่วโมง ปลอดภัย อุ่นใจเหมือนอยู่บ้าน"
				icon="bolt"
				classes="text-center dark:!bg-neutral-800/50"
				link="/"
			/>
		</Col>
		<Col span="3" classes="flex flex-col gap-6">
			<Card
				title="สัมผัสวิถีชุมชน"
				subtitle="เรียนรู้วิถีชีวิตและวัฒนธรรมของชาวจีนยูนนานในหมู่บ้านผาแดง สัมผัสการท่องเที่ยวเชิงวัฒนธรรมที่ไม่เหมือนใคร"
				icon="chat-bubble-left-ellipsis"
				classes="text-center dark:!bg-neutral-800/50"
				link="/"
			/>
		</Col>
	</Row>
</Section>
