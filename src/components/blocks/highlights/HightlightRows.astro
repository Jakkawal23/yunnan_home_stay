---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/home_stay_01.png'
import highlight01mobile from '../../../assets/home_stay_01.png'
import highlight02 from '../../../assets/home_stay_01.png'
import highlight02mobile from '../../../assets/home_stay_01.png'
import highlight03 from '../../../assets/home_stay_01.png'
import highlight03mobile from '../../../assets/home_stay_01.png'
import highlight04 from '../../../assets/home_stay_01.png'
import highlight04mobile from '../../../assets/home_stay_01.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}

const highlightBlocks: HighlightBlock[] = [
	{
		title: 'พักผ่อนกลาง <strong>ชุมชนยูนนาน บ้านผาแดง</strong>',
		text: 'ยูนนานโฮมสเตย์ตั้งอยู่ใจกลางหมู่บ้านผาแดง จุดพักผ่อนท่ามกลางความสงบและความเป็นมิตรของชาวบ้านแท้ ๆ สัมผัสเสน่ห์วิถีชีวิตเรียบง่าย ใกล้แหล่งท่องเที่ยวและเส้นทางหลักไปดอยอ่างขาง เหมาะสำหรับนักเดินทางที่ต้องการพักใจและพักกายท่ามกลางบรรยากาศอบอุ่นแบบครอบครัว',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'สัมผัสประสบการณ์ <strong>วิถีชีวิตชาวจีนยูนนานแท้</strong>',
		text: 'เพลิดเพลินไปกับการเรียนรู้วิถีชุมชนจีนยูนนานในหมู่บ้านผาแดง ชมการแต่งกายพื้นเมือง ชิมอาหารยูนนานแท้ ๆ และร่วมกิจกรรมท้องถิ่น เช่น การทำชา การเรียนภาษาจีน และการละเล่นของเด็ก ๆ ที่ยังคงสืบทอดวัฒนธรรมจากรุ่นสู่รุ่น',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>อากาศเย็นสบาย</strong> โอบล้อมด้วยขุนเขาและหมอกยามเช้า',
		text: 'โฮมสเตย์ตั้งอยู่บนเส้นทางขึ้นดอยอ่างขาง อากาศเย็นตลอดปี สดชื่นทุกลมหายใจ ชมทะเลหมอกยามเช้า ท่ามกลางภูเขาเขียวขจีและธรรมชาติที่ยังคงความสมบูรณ์ เหมาะสำหรับคนที่ต้องการหนีความวุ่นวาย มาพักใจในอ้อมกอดของธรรมชาติ',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: '<strong>ใกล้แหล่งท่องเที่ยวดัง</strong> เดินทางสะดวกทุกเส้นทาง',
		text: 'ยูนนานโฮมสเตย์อยู่ใกล้สถานที่ท่องเที่ยวยอดนิยม เช่น สถานีเกษตรหลวงอ่างขาง จุดชมวิวขอบด้ง และหมู่บ้านนอแล เดินทางเพียงไม่กี่นาที เหมาะสำหรับนักท่องเที่ยวที่ต้องการพักผ่อนและเที่ยวได้ในทริปเดียว',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'left'
	},
	{
		title: 'ห้องพัก <strong>สะดวก สะอาด ปลอดภัย</strong> เหมือนอยู่บ้าน',
		text: 'ทุกห้องพักได้รับการดูแลอย่างพิถีพิถัน สะอาดและเป็นส่วนตัว มีห้องน้ำในตัว เครื่องนอนใหม่สะอาด พร้อมกล้องวงจรปิดดูแลความปลอดภัยตลอด 24 ชั่วโมง เพื่อให้คุณพักผ่อนได้อย่างอุ่นใจและสบายใจเหมือนอยู่บ้าน',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'right'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
